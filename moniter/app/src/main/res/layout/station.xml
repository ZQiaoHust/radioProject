    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务器IP地址和端口号："
        android:textSize="18sp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="IP:"/>
       <EditText
           android:id="@+id/et_serveIP"
           android:layout_width="0dp"
           android:layout_weight="3"
           android:gravity="center"
           android:layout_height="wrap_content"
           android:hint="27.17.8.142"
           android:textColorHint="@color/green"
           />
       <TextView
       android:layout_width="0dp"
       android:layout_weight="2"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:text="端口号:"/>
       <EditText
           android:id="@+id/et_port"
           android:layout_width="0dp"
           android:layout_weight="3"
           android:gravity="center"
           android:layout_height="wrap_content"
           android:hint="9000"
           android:textColorHint="@color/green"
           />
   </LinearLayout>
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_connectSERVER"
        android:text="连接监控服务器"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="IP:"/>
        <EditText
            android:id="@+id/et_fileIP"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="27.17.8.142"
            android:textColorHint="@color/green"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="端口号:"/>
        <EditText
            android:id="@+id/et_filePort"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="9988"
            android:textColorHint="@color/green"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_connectFILE"
        android:text="连接文件服务器"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FPGA设备ID号/WIFI的IP地址："
        android:textSize="18sp"/>
    <Spinner
        android:id="@+id/spinner_WIFI"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

    </Spinner>
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_connectPCB"
        android:text="连接硬件"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_requestNetwork"
        android:text="申请入网"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_getpcbinfo"
        android:text="查询终端"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:gravity="center"
        android:background="#cdcdcd"
        android:id="@+id/pcbinfo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_ID"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_style"
            android:layout_marginLeft="20dp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_marginLeft="20dp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    </LinearLayout>


