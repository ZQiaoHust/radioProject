<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <TextView
        android:background="#a3cf62"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件上传模式:"
        android:textSize="20sp"/>

    <RadioGroup
        android:id="@+id/rg_sendMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbtn_sendHand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动传输"
            android:textSize="18sp"
            />
        <RadioButton
            android:id="@+id/rbtn_sendAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动传输"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/lilay_autoSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功率谱变化判断门限(dB)"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spinner_autoSend"
                android:layout_width="100dp"
                android:layout_height="wrap_content">
            </Spinner>

        </LinearLayout>
        <RadioButton
            android:id="@+id/rbtn_sendSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抽取传输"
            android:textSize="18sp"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/lilay_selectSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="抽取倍率："
            android:textSize="18sp"/>
       <SeekBar
           android:id="@+id/seekBar_selectSend"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:max="63"
           android:progress="63"
           />
        <TextView
            android:id="@+id/tv_selectSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前值：63"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <TextView
        android:background="#a3cf62"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扫频模式"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:id="@+id/rg_sweep"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rbtn_whole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全频段扫描"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/rbtn_specify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="指定扫描"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/rbtn_many"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多频段扫描"
            android:textSize="18sp"/>
    </RadioGroup>
    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_setoutgain"
            android:layout_weight="1"
            android:text="设置"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bt_getoutgain"
            android:text="查询"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>
