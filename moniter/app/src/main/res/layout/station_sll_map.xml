<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".service.MainActivity">


    <com.baidu.mapapi.map.MapView
        android:id="@+id/TerminalMapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <LinearLayout
        android:id ="@+id/TerminalLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom ="true"
        android:layout_height="wrap_content"
        android:background="#ffffffff">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profuserbig"/> />
        <TextView
            android:id="@+id/profuser"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业用户终端"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profsearchbig"/> />
        <TextView
            android:id="@+id/profsearch"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业查询终端"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/normaluserbig"/> />
        <TextView
            android:id="@+id/normaluserbig"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通用户终端"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/normalsearchbig"/> />
        <TextView
            android:id="@+id/normalsearchbig"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通查询终端"/>


    </LinearLayout>

</RelativeLayout>
