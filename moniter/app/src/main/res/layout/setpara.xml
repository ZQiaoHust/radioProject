<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#dbdbdb"
    android:layout_height="match_parent"
    >
    <include layout="@layout/title_canshu"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
           >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_recv"
                android:textSize="18sp"
                android:gravity="bottom"
                android:textColor="#000000"
                android:background="#a3cf62"

                />

            <SeekBar
                android:id="@+id/seekBar_recv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="89"
                 />

            <TextView
                android:id="@+id/tv_recvGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前值：0"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/bt_setingain"
                    android:layout_weight="1"
                    android:text="设置"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/bt_getingain"
                    android:text="查询"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="#ffffff"

           >


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_send"
                android:textSize="18sp"
                android:gravity="bottom"
                android:textColor="#000000"
                android:background="#a3cf62"
                />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_send"
                android:layout_marginTop="20dp"
                android:max="73"
                />

            <TextView
                android:id="@+id/tv_sendGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前值：-1"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/bt_setoutgain"
                    android:layout_weight="1"
                    android:text="设置"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/bt_getoutgain"
                    android:text="查询"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="#ffffff"

        >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/test_Gate"
                android:textColor="#000000"
                android:background="#a3cf62"
                 />

            <RadioGroup
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup1"
                android:orientation="horizontal">

                <RadioButton
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="固定门限"
                    android:textSize="18sp"
                    android:id="@+id/rbtn_guding"
                    android:layout_marginLeft="40dp"
                    />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自适应门限"
                android:textSize="18sp"
                android:id="@+id/rbtn_zidingyi"
                android:layout_marginLeft="40dp"

                />

            </RadioGroup>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#D3D3D3" />

        <LinearLayout
            android:id="@+id/reLayout_testGate1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/text_gate1"
                android:textSize="18sp"
                android:textColor="#000000"
             />

            <SeekBar
                android:id="@+id/seekBar_test"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                 />


            <TextView
                android:id="@+id/tv_testGate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前值：0"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                 />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/reLayout_testGate2"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/text_gate2"
                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/textView6" />
            <Spinner
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/spinner"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="33dp"/>


        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bt_Setgate"
            android:layout_weight="1"
            android:text="设置"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bt_Getgate"
            android:text="查询"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</LinearLayout>